/* New Page Icon

  Size availablity:
  [-] 16x16
  [ ] 32x32
  [ ] 48x48
  [ ] 64x64
  [ ] 128x128

 */

.ci-newpage
  border-top 2px solid #fc6
  box-shadow inset 0 0 0 2px #fed
  height 15px
  top 10px
  width 20px

.ci-newpage:after
  height 10px
  right 1px
  top -9px
  width 10px
  z-index -1
  transform rotate(45deg)

.ci-newpage::before
  border-bottom none
  border-right 2px solid border-color
  height 10px
  left -2px
  top -12px
  width 11px
