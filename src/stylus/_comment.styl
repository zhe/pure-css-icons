/* Comment Icon

  Size availablity:
  [-] 16x16
  [-] 32x32
  [-] 48x48
  [ ] 64x64
  [ ] 128x128

 */

.ci-comment
  border-radius 3px
  border 2px solid stroke-color
  background-color bg-color
  width 16px
  height round(@width * .8)
  &::before
    border-top 3px solid stroke-color
    border-left 3px solid transparent
    border-right 3px solid transparent
    border-bottom 0 solid transparent
    top 11px
    left 3px
  &::after
    border 1px solid stroke-color
    border-radius 100%
    top 3px
    left 2px
    box-shadow 3px 0 0 0 stroke-color, 6px 0 0 0 stroke-color

.ci-comment-32
  width 32px
  height round(@width * .8)
  &::before
    border-top 6px solid stroke-color
    border-left 6px solid transparent
    border-right 6px solid transparent
    border-bottom 0 solid transparent
    top 24px
    left 8px
  &::after
    border 2px solid stroke-color
    border-radius 100%
    top 9px
    left 4px
    box-shadow 8px 0 0 0 stroke-color, 16px 0 0 0 stroke-color

.ci-comment-48
  width 48px
  border 3px solid stroke-color
  height round(@width * .8)
  &::before
    border-top 9px solid stroke-color
    border-left 9px solid transparent
    border-right 9px solid transparent
    border-bottom 0 solid transparent
    top 35px
    left 12px
  &::after
    border 3px solid stroke-color
    border-radius 100%
    top 12px
    left 6px
    box-shadow 12px 0 0 0 stroke-color, 24px 0 0 0 stroke-color
